// Character descriptors for Consolas 8pt
// { [Char width in bits], [Offset into consolas_8ptCharBitmaps in bytes] }
FONT_CHAR_INFO font_8ptChrsDescr[16] =
{
	{3, 0}, 		// ,
	{0, 0}, 		// -
	{2, 9}, 		// .
	{0, 0}, 		// /
	{5, 18}, 		// 0
	{5, 27}, 		// 1
	{5, 36}, 		// 2
	{4, 45}, 		// 3
	{6, 54}, 		// 4
	{4, 63}, 		// 5
	{5, 72}, 		// 6
	{5, 81}, 		// 7
	{5, 90}, 		// 8
	{5, 99}, 		// 9
	{2, 108}, 		// :
};

// Font information for Consolas 8pt
FONT_INFO font_8pt_info =
{
	1, //  Character height
	',', //  Start character
	':', //  End character
	2, //  Width, in pixels, of space character
	//{font_8ptChrsDescr[15]}, //  Character descriptor array
	{font_8ptBtmps[100]}, //  Character bitmap array
};

